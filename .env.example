# Environment Configuration
NODE_ENV=development

# Server Ports
API_PORT=3001
CONSUMER_PORT=3000
CREATOR_STUDIO_PORT=3002
ADMIN_PORT=3003

# Database
MONGODB_URI=mongodb://localhost:27017/prism
DB_NAME=prism

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3002,http://localhost:3003

# File Upload
MAX_FILE_SIZE=100MB
UPLOAD_PATH=./uploads

# Streaming (for future use)
STREAMING_SERVER_URL=ws://localhost:8080

# Payment Integration (for future use)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# Email Service (for future use)
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-email-password
